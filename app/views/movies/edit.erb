<h2>Edit <%= @movie.title %>:</h2>

<form action='/movies/<%=@movie.id%>' method="POST">
    <input type="hidden" name="_method" value="PATCH">
    Title: <input type="text" name="title" value="<%= @movie.title %>"><br>
    Genre: <input type="text" name="genre" value="<%= @movie.genre %>"><br>
    Year: <input type="text" name="year" value="<%= @movie.year %>"><br>
    Short summary: <br><textarea name="summary" rows="10" cols="50"><%= @movie.summary %></textarea><br>
    <input type="submit" value="Edit Movie">
</form>
<br><a href="/movies/<%=@movie.id%>">Cancel edit</a>